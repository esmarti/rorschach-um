<h1>Listing zones</h1>

<table>
  <thead>
    <tr>
      <th>Coord x</th>
      <th>Coord y</th>
      <th>Width</th>
      <th>Height</th>
      <th>Z index</th>
      <th>Bg image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @zones.each do |zone| %>
      <tr>
        <td><%= zone.coord_x %></td>
        <td><%= zone.coord_y %></td>
        <td><%= zone.width %></td>
        <td><%= zone.height %></td>
        <td><%= zone.z_index %></td>
        <td><%= zone.bg_image %></td>
        <td><%= link_to 'Show', admin_sheet_area_zone_path(@sheet_id, @area_id, zone) %></td>
        <td><%= link_to 'Edit', edit_admin_sheet_area_zone_path(@sheet_id, @area_id, zone) %></td>
        <td><%= link_to 'Destroy', admin_sheet_area_zone_path(@sheet_id, @area_id, zone), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Zone', new_admin_sheet_area_zone_url(@sheet_id, @area_id) %>
