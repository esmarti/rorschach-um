<h1>Listing sheets</h1>

<table class="table table-striped table-bordered table-hover table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Background</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @sheets.each do |sheet| %>
      <tr>
        <td><%= sheet.name %></td>
        <td><%= sheet.background %></td>
        <td><%= link_to 'Show', admin_sheet_path(sheet) %></td>
        <td><%= link_to 'Edit', edit_admin_sheet_path(sheet) %></td>
        <td><%= link_to 'Destroy', admin_sheet_path(sheet), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Administracion de Areas', admin_sheet_areas_path(sheet) %></tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Sheet', new_admin_sheet_path %> |
